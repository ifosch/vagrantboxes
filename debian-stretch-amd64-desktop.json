{
    "variables": {
        "version": "0.0.2"
    },
    "push": {
      "name": "natx/debian-stretch-amd64-desktop",
      "vcs": true
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/vagrant.sh",
                "scripts/virtualbox.sh",
                "scripts/dep.sh",
                "scripts/upgrade.sh",
                "scripts/cleanup.sh",
                "scripts/zerodisk.sh"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc>",
                "<wait>install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "headless": true,
            "boot_wait": "10s",
            "disk_size": 20480,
            "guest_os_type": "Debian_64",
            "http_directory": "http",
            "iso_checksum": "c9e070074de83aa22e141f59a423e5210a5019b369ef1efe61a2afd44ba8f371",
            "iso_checksum_type": "sha256",
            "iso_url": "http://cdimage.debian.org/cdimage/release/9.1.0/amd64/iso-cd/debian-9.1.0-amd64-netinst.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "14400s",
            "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version"
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "output": "debian-stretch-amd64-desktop.box"
        },
        {
            "type": "vagrant-cloud",
            "box_tag": "natx/debian-stretch-amd64-desktop",
            "version": "{{user `version`}}"
        }]
    ]
}
